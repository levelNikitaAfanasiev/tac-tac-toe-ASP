<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title – приложение ASP.NET</title>
    <link type="text/css" rel="stylesheet" href="../../Content/XO.css" />
</head>
<body>
        <div class="X">
            @using (Ajax.BeginForm("Winner", new AjaxOptions { UpdateTargetId = "results" }))
            {

                <input type="submit" id="button1" name="s1" value="" /> <input type="submit" id="button2" name="s2" value="" /> <input type="submit" id="button3" name="s3" value="" /> <br />
                <input type="submit" id="button4" name="s4" value="" /> <input type="submit" id="button5" name="s5" value="" /> <input type="submit" id="button6" name="s6" value="" /> <br />
                <input type="submit" id="button7" name="s7" value="" /> <input type="submit" id="button8" name="s8" value="" /> <input type="submit" id="button9" name="s9" value="" /> <br />
            }
        </div>
    <div id="results"></div>

    @Scripts.Render("~/scripts/jquery-3.3.1.js")
    @Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")
    <script type="text/javascript">
        var i = 0;
        $(function () {
            $('input').one('click', function () {
                var button = $(this).attr('id');
                var element = document.getElementById(button);
                if (i % 2 == 0) {
                    $(element).val('X');
                 
                }
                else {
                    $(element).val('O');
               
                }
                i++;
              
            });

        });
         

    </script>
</body>
</html>
